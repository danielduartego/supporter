<div class="row">

  <div class="col-md-4"></div>
  <div class="col-md-4">

    <table class="table table-striped table-bordered">

          <h2> Request </h2>

        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Message</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Back</th>
          </tr>
        </thead>
            <tr>
              <td><%= @support.name %></td>
              <td><%= @support.email %></td>
              <td><%= @support.department %></td>
              <td><%= @support.message %></td>
              <td><%= link_to "edit", edit_support_path(@support),
                                      {class: "btn btn-default btn-sm"} %></td>
              <td><%= link_to "delete", support_path(@support), {method: :delete,
                                                      class: "btn btn-danger btn-sm"} %></td>
              <td><%= link_to "home", root_path, class: "btn btn-success btn-sm" %> </td>
            </td>
    </table>

  </div>
  <div class="col-md-4"></div>

</div>
